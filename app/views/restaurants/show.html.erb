<h1>
  <%= @restaurant.title %>
  <i id="thumbsup" class="far fa-thumbs-up"></i>
  <div id="thumb" data-id="<%= @restaurant.id %>" class="<%= 'thumbs-color' if @restaurant.likers.include?(current_user) %>"></div>
</h1>

<h3>留言</h3>
<%= form_for(@comment, url: restaurant_comments_path(@restaurant), remote: true) do |form| %>
  <div class="field">
    <%= form.label :content, '留言內容' %>
    <%= form.text_area :content %>
  </div>
  <%= form.submit %>
<% end %>

<ul id="comment_area">
<% @comments.each do |comment| %>
  <li><%= comment.content %></li>
<% end %>
</ul>

<%= link_to "回餐廳列表", restaurants_path %>